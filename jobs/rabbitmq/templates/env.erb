JOB_NAME=rabbitmq

export HOME=${HOME:-/home/vcap}
export JOB_DIR=/var/vcap/jobs/$JOB_NAME
export RUN_DIR=/var/vcap/sys/run/$JOB_NAME
export LOG_DIR=/var/vcap/sys/log/$JOB_NAME
export TMP_DIR=/var/vcap/sys/tmp/$JOB_NAME
export STORE_DIR=/var/vcap/store/$JOB_NAME
export TMPDIR=$TMP_DIR
export PIDFILE=$RUN_DIR/$JOB_NAME.pid

<% if p("rabbitmq.debug") == true  %>
DEBUG=true
EPMD_DEBUG="-debug"
<% else %>
DEBUG=false
EPMD_DEBUG=""
<% end %>
export DEBUG EPMD_DEBUG

export BOOTSTRAP_NODE="<%= "true" if spec.bootstrap %>"
export BOOTSTRAP_NODE_INSTANCE="<%= "#{spec.name}.0" %>"

export RABBITMQ_SERVICE_USER=vcap
export RABBITMQ_SERVICE_GROUP=vcap
export RABBITMQ_PROCESS_NAME=beam.smp

# start installs the server, which can take a while...
export MONIT_START_TIMEOUT=90

timeout_per_worker_process_type=30 
# defined as WORKER_WAIT in https://github.com/rabbitmq/rabbitmq-common/blob/master/include/rabbit.hrl#L252-L253

number_of_worker_process_types=5   # 1. connections
                                   # 2. channels
                                   # 3. queues
                                   # 4. persistent message store
                                   # 5. transient message store
export SERVICE_SHUTDOWN_TIMEOUT=$((timeout_per_worker_process_type * number_of_worker_process_types))
export RABBITMQADMIN_BIN="${RABBITMQ_PACKAGE}/sbin/rabbitmqadmin"
export RABBITMQADMIN_DOWNLOAD_URL="http://127.0.0.1:15672/cli/rabbitmqadmin"
export RABBITMQ_ADDITIONAL_ERL_ARGS="+stbt $RABBITMQ_SCHEDULER_BIND_TYPE +zdbbl $RABBITMQ_DISTRIBUTION_BUFFER_SIZE +P $RABBITMQ_MAX_NUMBER_OF_PROCESSES +t $RABBITMQ_MAX_NUMBER_OF_ATOMS <%= p("rabbitmq.additional_erl_args") %>"
export RABBITMQ_ADMIN_PASS="<%= p("rabbitmq.admin_pass") %>"
export RABBITMQ_ADMIN_USER="<%= p("rabbitmq.admin_user") %>"
export RABBITMQ_CLUSTER_NAME="<%= spec.deployment %>"
export RABBITMQ_CONFIG_FILE=/var/vcap/jobs/rabbitmq/rabbitmq
export RABBITMQ_CREATE_DEMO_USER="<%= p("rabbitmq.create_demo_user").to_s %>"
export RABBITMQ_CTL_ERL_ARGS="<%= p("rabbitmq.ctl_erl_args") %>"
export RABBITMQ_DISTRIBUTION_BUFFER_SIZE="<%= p("rabbitmq.distribution_buffer_size") %>"
export RABBITMQ_JOB_PACKAGE=/var/vcap/jobs/rabbitmq/packages/rabbitmq
export RABBITMQ_LOG_BASE="<%= p("rabbitmq.log_directory") %>"
export RABBITMQ_MAX_NUMBER_OF_ATOMS="<%= p("rabbitmq.max_erlang_atoms") %>"
export RABBITMQ_MAX_NUMBER_OF_PROCESSES="<%= p("rabbitmq.max_erlang_processes") %>"
export RABBITMQ_MNESIA_BASE="<%= p("rabbitmq.mnesia_base") %>"
export RABBITMQ_NODENAME="rabbit@<%= "#{spec.name}#{spec.index}-#{spec.deployment}" %>"
export RABBITMQ_ONLY_ENABLE_THESE_PLUGINS="<%= p("rabbitmq.only_enable_these_plugins").join(" ") %>"
export RABBITMQ_PACKAGE="${RABBITMQ_PACKAGES_DIR}/rabbitmq_server-${RABBITMQ_PACKAGE_VERSION}"
export RABBITMQ_PACKAGES_DIR="/var/vcap/data/rabbitmq"
export RABBITMQ_PACKAGE_ARCHIVE="${RABBITMQ_PACKAGE_URL##*/}"
export RABBITMQ_PACKAGE_URL="<%= p("rabbitmq.generic-unix-url") %>"
export RABBITMQ_PACKAGE_VERSION="${${RABBITMQ_PACKAGE_URL##*generic-unix-}%%.tar.*z}"
export RABBITMQ_PID_FILE="$RABBITMQ_RUN_DIR/beam.pid"
export RABBITMQ_PLUGINS_DIR="$RABBITMQ_JOB_PACKAGE/plugins"
export RABBITMQ_RUN_DIR=/var/vcap/sys/run/rabbitmq
export RABBITMQ_SCHEDULER_BIND_TYPE="<%= p("rabbitmq.scheduler_bind_type") %>"
export RABBITMQ_TRUST_STORE_DIR="<%= p("rabbitmq-trust-store.directory") %>"

<% if_link("periodic_shutdown") do |_| %>
export RABBITMQ_NODES="<%= link("rabbitmq").instances.map { |i| "rabbit@rmq#{i.index}-#{spec.deployment}" }.join(' ') %>"
<% end %>

<% if p("erlang.lock_counting") %>
export RABBITMQ_START_ARGS="-emu_type lcnt $RABBITMQ_START_ARGS"
export RABBITMQ_PROCESS_NAME=beam.lcnt.smp
<% end %>

export LANGUAGE=en_US.UTF-8
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8

export EPMD_PID_FILE="$RABBITMQ_RUN_DIR/epmd.pid"
export EPMD_TIMEOUT=5
export ERL_INETRC=/var/vcap/jobs/rabbitmq/erl_inetrc
export ERL_AFLAGS="-kernel shell_history enabled"
export ERLANG_COOKIE="<%= p("erlang.cookie") %>"
export ERLANG_VERSION=<%= p("erlang.version") %>
export ERLANG_HOME=/var/vcap/jobs/rabbitmq/packages/erlang-$ERLANG_VERSION

# erl(1) / erlc(1) require $HOME to be set, default to the service user
[[ -n "$HOME" ]] || export HOME="/home/${RABBITMQ_SERVICE_USER}"

# Q: Below? vvv
export RABBITMQ_HOME=/var/vcap/jobs/rabbitmq

#export PATH="$RABBITMQ_JOB_PACKAGE/sbin:$ERLANG_HOME/bin:/var/vcap/jobs/rabbitmq/bin:/var/vcap/jobs/rabbitmq/packages/rabbitmq-support-tools/scripts:$PATH"
export PATH="$PATH:/var/vcap/packages/erlang/bin:/var/vcap/packages/rabbitmq/sbin"

